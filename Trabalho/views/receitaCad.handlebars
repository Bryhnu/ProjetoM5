<html lang="pt-br">
  <head>

    <div id="region">
      <meta charset="UTF-8" />
      <meta http-equiv="X-UA-Compatible" content="IE=edge" />
      <meta name="viewport" content="width=device-width, initial-scale=1.0" />
      <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
        rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
        crossorigin="anonymous"
      />
      <link href="/public/css/cad.css" rel="stylesheet" />
      <link rel="stylesheet" href="/public/css/style.css" />
      <title>Cadastro</title>
    </div>

  </head>

  <body>

    <form action="receita/insertreceita" method="post">

      <div class="boxCad">

        <div class="text">
          <h1>Prescrição</h1>
        </div>
        <div id="boxButton">
          <pre> <a href="/receita"> Ver receitas </a> <a href="/"> Inicio</a> </pre>
        </div>
        <div class="form-control">

          <label for="nome">Nome:</label>
          <input
            type="text"
            name="nome"
            placeholder="Insira o nome do paciente"
            required
          />
        </div>
        <div class="invalid-feedback">
          Insira o nome do paciente
        </div>

        <div class="form-control">

          <label for="cpf">Cpf:</label>
          <input
            type="text"
            name="cpf"
            placeholder="Insira o cpf do paciente"
            required
          />

        </div>
        <div class="invalid-feedback">
          Insira o cpf do paciente
        </div>

        <div class="form-control">

          <label for="telefone">Telefone:</label>
          <input
            type="text"
            name="telefone"
            placeholder="Insira o telefone do paciente"
            required
          />

        </div>
        <div class="invalid-feedback">
          Insira o telefone do paciente
        </div>
        <div class="form-control">

          <label for="email">idade:</label>
          <input
            type="text"
            name="idade"
            placeholder="Insira a idade do paciente"
            required
          />

        </div>
        <div class="invalid-feedback">
          Insira a idade do paciente
        </div>

        <div class="form-control">

          <label for="data">Data:</label>
          <input
            type="date"
            name="data"
            placeholder="Insira a data da consulta"
            required
          />

        </div>
        <div class="invalid-feedback">
          Insira a data da consulta
        </div>
        <div class="form-control">

          <label for="medico">Médico:</label>
          <input
            type="text"
            name="medico"
            placeholder="Insira o nome do Médico"
            required
          />

        </div>
        <div class="invalid-feedback">
          Insira o nome do Médico
        </div>
        <div class="form-control">

          <label for="remedio">Receita:</label>
          <select name="remedio">

          {{#each listarMed}}
         <option value="{{nome}}"> {{nome}}</option>
         {{/each}}
          </select>
        

        </div>
        <div class="invalid-feedback">
          Insira a presquição
        </div>
        <br>
        <input type="submit" value="Enviar" class="botao" />

      </div>
      

    </form>

  </body>

  <div id="region">
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
      crossorigin="anonymous"
    ></script>
    <script src="/public/javascript/checkout.js"></script>
  </div>

</html>