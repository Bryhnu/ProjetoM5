    <link rel="stylesheet" href="/public/css/style.css">
</head>

<body class="bg-light">

    <div class="container">
        <main>

            <div class="row g-5 d-flex justify-content-center">
                <div class="col-md-7 col-lg-10"><br><br>
                    <h4 class="mb-3">Edite seus dados abaixo:</h4>
                    <form class="needs-validation" action="/cliente/edit" method="post" novalidate>
                        <div class="row g-3">
                            <input type="hidden" name="cpf" value="{{cliente.cpf}}" />

                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">Nome</label>
                                <input type="text" class="form-control" id="firstName" placeholder="Insira seu nome" value="{{cliente.nome}}" name="nome" required>
                                <div class="invalid-feedback">
                                    Por favor insira seu nome.
                                </div>
                            </div>

                            <div class="col-sm-6">
                                <label for="lastName" class="form-label">Sobrenome</label>
                                <input type="text" class="form-control" id="lastName" placeholder="Insira seu sobrenome" value="{{cliente.sobrenome}}" name="sobrenome" required>
                                <div class="invalid-feedback">
                                    Por favor insira seu sobrenome.
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" placeholder="Insira seu e-mail" value="{{cliente.email}}" name="email" required>
                                <div class="invalid-feedback">
                                    Por favor insira seu e-mail.
                                </div>
                            </div>

                            <div class="col-8">
                                <label for="address" class="form-label">Telefone</label>
                                <input type="text" class="form-control" id="address"
                                    placeholder="Insira seu telefone para contato" value="{{cliente.telefone}}" name="telefone" required>
                                <div class="invalid-feedback">
                                    Por favor insira seu telefone.
                                </div>
                            </div>

                            <div class="col-md-4">
                                <label for="senha" class="form-label">Data de nascimento</label>
                                <input type="password" class="form-control" placeholder="Insira sua data de nascimento" value="{{cliente.nascimento}}" name="nascimento" required>
                                <div class="invalid-feedback">
                                    Por favor insira sua data de nascimento.
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">

                        <button class="w-100 btn btn-primary btn-lg" type="submit">Finalizar cadastro</button>
                    </form>
                </div>
            </div>
        </main>

        <footer class="my-5 pt-5 text-muted text-center text-small">
            <p class="mb-1">&copy; 2017â€“2022 Company Name</p>
        </footer>
    </div>


