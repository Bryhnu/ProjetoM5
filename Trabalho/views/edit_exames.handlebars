<h1>Editar Exame</h1>
<link rel='stylesheet' href='/style.css' />

<hr>

<div class="container">
<form action="/upexame" method="post">

     <div class="form-control">
          <input type="hidden" name="id" id="id" value="{{editarexame.id}}">
          <label for="exame">Nome do exame:</label>
          <input list="exames" name="exame" placeholder="Escolha uma opção" value="{{editarexame.exame}}">
          <datalist id="exames">
               <option value="Hemograma">
               <option value="Glicemia em Jejum">
               <option value="Colesterol e triglicerídeos">
               <option value="Ureia e Creatina">
               <option value="TGO (AST) E TGP (ALT)">
               <option value="TSH E T4 LIVRE">
               <option value="Ácido Úrico">
               <option value="Exames de urina">
               <option value="Eletrocardiograma">
               <option value="Teste ergométrico">
               <option value="Ecocardiograma">        
          </datalist>
     </div>

     <hr>

     <div class="form-control">

          <label for="medico">Nome Médico</label>
          <input type="text" name="medico" placeholder="Nome do medico" value="{{editarexame.medico}}">

     </div>
     
     <hr>

     <div class="form-control">

          <label for="paciente">Nome Paciente:</label>
          <input type="text" name="paciente" placeholder="Nome do paciente" value="{{editarexame.paciente}}">

     </div>

     <hr>

     <div class="form-control">

          <label for="data">Data:</label>
          <input type="date" name="data" placeholder="Data" value="{{editarexame.data}}">

     </div>

     <hr>

     <div class="form-control">

          <label for="horario"></label>
          <input type="horario" name="horario" placeholder="Horário" value="{{editarexame.horario}}">
     </div>

     <hr>

     <input type="submit" value="Editar">


</form>
</div>
<hr>
<a href="/">Home</a>